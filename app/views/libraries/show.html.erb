<% content_for :title, @library %>
<div class="row-fluid">
  <div class="span12">
	<%= image_tag 'banner-peoplenetz.png' %>
  </div>
</div> <!--/row -->

<div class="row-fluid">
  <div class="span9">
	<h3>
	  <%= @library.name %>
	</h3>

	<p>
Peoplenetz® Specializ® software lets you communicate easier, faster, and better with PDF. Increase your productivity by editing and reusing content, streamlining reviews, and quickly creating fillable PDF forms.
	</p>

    <div class="row-fluid">
	  <div id="topic_content" class="span6">
		<%= render 'topic_content' %>
	  </div>
	  <div class="span3 library_topics">
		<ul class="fonts-sitemap">
		  <% @library.library_topics.each do |topic| %>
			<li><%= link_to topic.title, library_library_topic_path(@library, topic)+".json", :remote => true %></li>
		  <% end %>	
		</ul>
	  </div>
	</div>
  </div>

  <div class="span3">
	<div class="row">
	  <div class="well">
		<h4>Libraries</h4>
	    <ul class="fonts-sitemap">
		  <% Library.all.each do |library| %>
			<li><%= link_to library.name, library %></li>
		  <% end %>	
		</ul>
	  </div> <!-- .well -->
	</div>
  </div>
</div>
