<% content_for :title, @library %>
<div class="row-fluid">
  <div class="span12">
	<%= image_tag 'banners/banner-peoplenetz.png' %>
  </div>
</div> <!--/row -->

<div class="row-fluid">
  <div class="span10">
	<div class="row-fluid">
      <h3>
	    <%= @library.name %>
	  </h3>
  	  <%= @library.description.html_safe %>
	</div>
	
   <% if @library_topic %>
    <div class="row-fluid">
	  <div class="span9">
		<%= render 'topic_content' %>
	  </div>
	  <div class="span3 ">
  		<div class="well sub_topics" style="padding:5px">
		  <ul class="fonts-sitemap">
		    <% @library.library_topics.order(:position).each do |topic| %>
			  <li><%= link_to topic.title, library_library_topic_path(@library, topic)+".json", :remote => true, :value => 'jdtest' %></li>
		    <% end %>	
		  </ul>
		</div>
	  </div>
	</div>
   <% end %>
  </div>

  <div class="span2">
	<%= render 'accordion'%>
  </div>
</div>
