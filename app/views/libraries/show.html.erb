<% content_for :title, @library %>
<div class="row-fluid">
  <div class="span12">
	<%= image_tag 'banner-peoplenetz.png' %>
  </div>
</div> <!--/row -->

<div class="row-fluid">
  <div class="span9">
	<p>
	  <b>Name:</b>
	  <%= @library.name %>
	</p>
	
	<p>
	  <b>Description:</b>
	  <%= @library.description %>
	</p>
  </div>


  <div class="span3">
	<div class="row">
	  <div class="well">
		<h4>Libraries</h4>
	    <ul class="fonts-sitemap">
		  <% Library.all.each do |library| %>
			<li><%= link_to library.name, library %></li>
		  <% end %>	
		</ul>
	  </div> <!-- .well -->
	</div>
  </div>
</div>
