<% content_for :title, @solution%>
<div class="row-fluid">
  <div class="span12">
	<%= image_tag 'banner-peoplenetz.png' %>
  </div>
</div> <!--/row -->

<div class="row-fluid">
  <div class="span9">
	<p>
	  <b>Name:</b>
	  <%= @solution.name %>
	</p>
	
	<p>
	  <b>Description:</b>
	  <%= @solution.description %>
	</p>
	
	<p>
	  <b>Pnetz solution:</b>
	  <%= @solution.pnetz_solution %>
	</p>
  </div>

  <div class="span3">
	<div class="row">
	  <div class="well">
		<h4>Solutions</h4>
	    <ul class="fonts-sitemap">
		  <% Solution.all.each do |solution| %>
			<li><%= link_to solution.name, solution %></li>
		  <% end %>	
		</ul>
	  </div> <!-- .well -->
	</div>
  </div>


</div>
